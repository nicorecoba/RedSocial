<h1>Bienvenido a Social NetWork</h1>
<h2>Inicio Sesión</h2>
<form action="/InicioSesion/Login" method="post">
    <div class="mb-3 row">
        <label for="Email" class="col-sm-2 col-form-label">Ingrese su email</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Email" name="Email">
        </div>
    </div>
    <div class="mb-3 row">
        <label for="Contraseña" class="col-sm-2 col-form-label">Ingrese su contraseña</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="Contraseña" name="Contraseña">
        </div>
    </div>
    <button type="submit" class="btn btn-primary" >Iniciar Sesion</button>
</form>
<a href="@Url.Action("Registrarse","Usuario")" type="button" class="btn btn-light" id="btnRegistrarse">Registrarse como usuario</a>
@if(TempData["MensajeError"] != null)
{

    <div class="alert alert-danger" role="alert">
        @TempData["MensajeError"];
    </div>
}